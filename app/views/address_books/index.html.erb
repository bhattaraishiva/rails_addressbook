<%- model_class = AddressBook -%>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
        <h5>Welcome Jhon Deo , Love to see you back. </h5>
        <hr />
        <% if user_signed_in? %>
        <%= link_to 'Edit Profile', edit_user_registration_path %>
        <div>
          <%= image_tag(current_user.picture_user.url(:thumb))%>
        </div>
      <% end %>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h5>Address Book List<h5>
        </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:id) %></th>
                <th><%= model_class.human_attribute_name(:full_name) %></th>
                <th><%= model_class.human_attribute_name(:addresses) %></th>
                <th><%= model_class.human_attribute_name(:phone_numbers) %></th>
                <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @address_books.each do |address_book| %>
                    <tr>
                      <td><%= link_to address_book.id, address_book_path(address_book) %></td>
                      <td><%= address_book.full_name %></td>
                      <% if address_book.addresses.any? %>
                        <% address_book.addresses.each do |a| %>
                          <td><%= "#{a.street}, #{a.city}, #{ a.state}, #{a.zipcode}, #{a.country}" %></td>
                        <% end %>
                      <% else %>
                        <p> not available </p>
                      <% end %>

                      <% if address_book.phone_numbers.any? %>
                        <% address_book.phone_numbers.each do |phone| %>
                          <td><%= "#{phone.phone}" %></td>
                        <% end %>
                      <% else %>
                        <p> not available </p>
                      <% end %>
                      <td><%= address_book.date_of_birth %></td>

                      <td>
                        <%= link_to t('.show', :default => t("helpers.links.show")),
                                    address_book_path(address_book), :class => 'btn btn-default btn-xs' %>

                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                    edit_address_book_path(address_book), :class => 'btn btn-default btn-xs' %>
                        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                    address_book_path(address_book),
                                    :method => :delete,
                                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                    :class => 'btn btn-xs btn-danger' %>
                      </td>
                    </tr>
                  <% end %>
            </tbody>

          </table>

        </div>
      </div>

    </div>
      <hr>
      <%= link_to t('.new', :default => t("New address book")),
                  new_address_book_path,
                  :class => 'btn btn-primary' %>

  </div>
</div>
