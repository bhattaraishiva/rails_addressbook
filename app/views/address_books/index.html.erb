<p id="notice"><%= notice %></p>

<h1>Address Books</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Address</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @address_books.each do |address_book| %>
      <tr>
        <td><%= address_book.full_name %></td>
        <% if address_book.addresses.any? %>
          <% address_book.addresses.each do |a| %>
            <td><%= "#{a.street}, #{a.city}, #{ a.state}, #{a.zipcode}, #{a.country}" %></td>
          <% end %>
        <% else %>
          <p> not available </p>
        <% end %>
        <td><%= address_book.date_of_birth %></td>
        <td><%= link_to 'Show', address_book %></td>
        <td><%= link_to 'Edit', edit_address_book_path(address_book) %></td>
        <td><%= link_to 'Destroy', address_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address Book', new_address_book_path %>
