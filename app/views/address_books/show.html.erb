<%- model_class = AddressBook -%>
<div class="container">
  <div class="row">
    <div class="col-md-9" >
      <div class="page-header" align="center">
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
        <hr />
        <% if user_signed_in? %>
          <%= link_to 'Edit Profile', edit_user_registration_path %>
          <div>
            <%= image_tag(current_user.picture_user.url(:medium))%>
          </div>
        <% end %>

      </div>
      <div class="panel panel-default">
        <div class="panel-heading" align="center">
          <h5>Information<h5>
        </div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
            <dd><%= @address_book.full_name %></dd>
            <dt><strong><%= model_class.human_attribute_name(:addresses) %>:</strong></dt>
            <dd>
              <% if @address_book.addresses.any? %>
                <% @address_book.addresses.each do |a| %>
                  <%= "#{a.street}, #{a.city}, #{ a.state}, #{a.zipcode}, #{a.country}" %>
                <% end %>
                <% else %>
                  <p> not available </p>
                <% end %>
            </dd>

            <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
            <dd><%= @address_book.date_of_birth %></dd>

            <dt><strong><%= model_class.human_attribute_name(:phone_numbers) %>:</strong></dt>

            <dd>
              <% if @address_book.phone_numbers.any? %>
              <% @address_book.phone_numbers.each do |phone| %>
                <%= "#{phone.phone}" %>
              <% end %>
              <% else %>
                <p> not available </p>
              <% end %>
            </dd>

          </dl>
        </div>
      </div>

      </div>
    </div>
    <hr>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  address_books_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_address_book_path(@address_book), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  address_book_path(@address_book),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

  </div>
</div>
