
<div class="row">
  <div class="col-md-4 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-5 col-xs-offset-1">

        <div class="address">
          <div class="form-group">
            <%= f.label :street %>
            <%= f.text_field :street, :class => 'form-control' %>
          </div>
          <%=f.error_span(:street) %>

          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, :class => 'form-control' %>
          </div>
          <%=f.error_span(:city) %>

          <div class="form-group">
            <%= f.label :state %>
            <%= f.text_field :state, :class => 'form-control' %>
          </div>
          <%=f.error_span(:state) %>

          <div class="form-group">
            <%= f.label :zipcode %>
            <%= f.text_field :zipcode, :class => 'form-control' %>
          </div>
          <%=f.error_span(:zipcode) %>

          <div class="form-group">
            <%= f.label :country %>
            <%= f.text_field :country, :class => 'form-control' %>
          </div>
          <%=f.error_span(:country) %>
          <div class="form-group">
            <%= link_to_remove_association('Delete address', f, {wrapper_class:'address'})%>
          </div>
        </div>

  </div>
</div>
